<?xml version="1.0" encoding="utf-8" ?>
<webExtender>
  <urls>
    <alias name="chrome">chrome://maplus/content</alias>
    <alias name="melior">http://meliorannis.idnes.cz</alias>
  </urls>
  <stylesheets>
    <style url="#{melior}/*" src="#{chrome}/html/maplus.css" weak="true" />
  </stylesheets>
  <extenders>
    <!-- Generic -->
    <script url="#{melior}/*" name="analyzes.js" scope="page" weak="true" />
    <script url="#{melior}/*" name="config.js" scope="extension" weak="true" />
    <script url="#{melior}/*" name="menu.js" scope="page" weak="true" />
    
    <!-- Specific -->
    <script url="#{melior}/obchod.html" name="bestiar.js" />
  </extenders>
</webExtender>
